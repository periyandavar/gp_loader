{
    "name": "gp/loader",
    "description": "A Loader library to autoload the classes and a container to support the dependency injections",
    "type": "library",
    "license": "MIT",
    "authors": [{
        "name": "periyandavar-ganesh",
        "email": "vickyperiyandavar@gmail.com"
    }],
    "autoload": {
        "psr-4": {
            "Loader\\": "src//"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Loader\\": "src//"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.72",
        "phpunit/phpunit": "^9.6",
        "phpstan/phpstan": "^2.1"
    },
    "require": {
        "php" : "^8.0"
    }
}